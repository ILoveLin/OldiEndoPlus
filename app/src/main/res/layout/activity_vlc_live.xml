<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vlc_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">
    <!--直播界面-->
    <RelativeLayout

        android:id="@+id/relative_live"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ff_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.company.iendoplus.widget.vlc.MyVlcVideoView
                android:id="@+id/player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" />

            <LinearLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/back_tiny"
                android:layout_toRightOf="@+id/back_tiny"
                android:background="@drawable/video_title_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--            android:background="@drawable/video_title_bg"-->
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:paddingLeft="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/video_back" />

                <TextView
                    android:id="@+id/tv_top_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:gravity="center_vertical"
                    android:text="我是标题"
                    android:textColor="@color/white"
                    android:textSize="@dimen/padding_20" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>

        </FrameLayout>
        <!--当前时间-->
        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="20dp"
            android:paddingTop="@dimen/padding_1"
            android:paddingRight="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_15"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <LinearLayout

            android:id="@+id/linear_contral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_5"
            android:background="@drawable/shape_vlc_gb_control"
            android:gravity="end"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_5"
            android:paddingBottom="@dimen/padding_5">


            <TextView
                android:id="@+id/ice_cream"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/padding_10"
                android:drawableTop="@drawable/ic_baseline_push_pin_24"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="@dimen/padding_5"
                android:text="冻结"
                android:textColor="@android:color/white"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/recordStart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/padding_10"
                android:drawableTop="@mipmap/icon_record_nore"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="@dimen/padding_5"
                android:text="录像"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/snapShot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/icon_frame_nore"
                android:paddingLeft="5dp"
                android:paddingRight="@dimen/padding_5"
                android:text="截图"
                android:textColor="@android:color/white"
                android:textSize="13sp" />


        </LinearLayout>
        <!--锁屏-->
        <ImageView

            android:id="@+id/lock_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_vlc_gb_control"
            android:padding="@dimen/padding_2"
            android:scaleType="centerInside"
            android:src="@drawable/video_lock_open_ic"
            android:visibility="visible" />

        <TextView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:drawableRight="@mipmap/nur_ic_fangda"
            android:gravity="center"
            android:minEms="3"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/padding_1"
            android:paddingRight="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_20"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <com.company.iendoplus.widget.ENDownloadView
            android:id="@+id/loading"
            android:layout_width="@dimen/padding_28"
            android:layout_height="@dimen/padding_28"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />

        <com.company.iendoplus.widget.ENPlayView
            android:id="@+id/start"
            android:layout_width="@dimen/padding_60"
            android:layout_height="@dimen/padding_60"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical" />

        <!--    <moe.codeest.enviews.ENDownloadView-->
        <!--        android:id="@+id/loading"-->
        <!--        android:layout_width="@dimen/padding_28"-->
        <!--        android:layout_height="@dimen/padding_28"-->
        <!--        android:layout_centerHorizontal="true"-->
        <!--        android:layout_centerVertical="true"-->
        <!--        android:visibility="invisible" />-->

        <!--    <moe.codeest.enviews.ENPlayView-->
        <!--        android:id="@+id/start"-->
        <!--        android:layout_width="@dimen/padding_60"-->
        <!--        android:layout_height="@dimen/padding_60"-->
        <!--        android:layout_centerHorizontal="true"-->
        <!--        android:layout_centerVertical="true"-->
        <!--        android:layout_gravity="center_vertical" />-->


        <!--出错提示-->
        <TextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/start"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_10"
            android:adjustViewBounds="true"
            android:background="@drawable/corner_gray"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="0"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:singleLine="true"
            android:text="@string/video_error_play"
            android:textColor="@color/white"
            android:textSize="@dimen/padding_16"
            android:visibility="visible" />


    </RelativeLayout>

</RelativeLayout>
